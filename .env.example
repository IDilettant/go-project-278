# ============================
# Required variables
# ============================

# Public base URL of the service.
# Used to build absolute URLs returned by the API (e.g. short_url).
#
# IMPORTANT:
# - This is a public-facing URL.
# - Must NOT include port numbers.
# - Should match how users access the service externally.
#
# Examples:
#   http://localhost
#   https://short.example.com
BASE_URL=http://localhost


# PostgreSQL connection string
DATABASE_URL=postgres://postgres:password@localhost:5432/appdb?sslmode=disable


# Sentry DSN (required)
SENTRY_DSN=__PUT_YOUR_SENTRY_DSN_HERE__


# ============================
# HTTP server
# ============================

# Listen address for the HTTP API server.
# This is an infrastructure detail.
#
# Examples:
#   8080
#   :8080
#   0.0.0.0:8080
PORT=8080


# HTTP server timeouts
HTTP_READ_HEADER_TIMEOUT=5s
HTTP_READ_TIMEOUT=15s
HTTP_WRITE_TIMEOUT=15s
HTTP_IDLE_TIMEOUT=60s
HTTP_SHUTDOWN_TIMEOUT=5s

# Request timeout middleware
HTTP_REQUEST_TIMEOUT=5s


# ============================
# Sentry
# ============================

SENTRY_FLUSH_TIMEOUT=2s
SENTRY_MIDDLEWARE_TIMEOUT=2s


# ============================
# Database connection pool
# ============================

DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=30m


# ============================
# API documentation (Swagger UI)
# ============================

# Public base URL of API documentation.
# This is a public-facing URL, same rule as BASE_URL.
#
# Examples:
#   http://localhost
#   https://docs.example.com
DOCS_URL=http://localhost

# Port used by Swagger UI container (infrastructure detail)
DOCS_PORT=8081

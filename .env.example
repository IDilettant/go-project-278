# Required variables

# Base URL of the service (used to build short links)
BASE_URL=http://localhost:8080

# PostgreSQL connection string
DATABASE_URL=postgres://postgres:password@localhost:5432/appdb?sslmode=disable

# Sentry DSN (required, set to your real DSN)
SENTRY_DSN=__PUT_YOUR_SENTRY_DSN_HERE__


# HTTP server

# Listen address for HTTP server.
# Can be:
#   8080
#   :8080
#   0.0.0.0:8080
PORT=8080

# HTTP server timeouts
HTTP_READ_HEADER_TIMEOUT=5s
HTTP_READ_TIMEOUT=15s
HTTP_WRITE_TIMEOUT=15s
HTTP_IDLE_TIMEOUT=60s
HTTP_SHUTDOWN_TIMEOUT=5s


# Sentry

# How long to wait for Sentry to flush events on shutdown
SENTRY_FLUSH_TIMEOUT=2s

# Timeout for Sentry HTTP middleware
SENTRY_MIDDLEWARE_TIMEOUT=2s


# Database connection pool

# Maximum number of open connections to the database
DB_MAX_OPEN_CONNS=10

# Maximum number of idle connections in the pool
DB_MAX_IDLE_CONNS=10

# Maximum lifetime of a database connection
DB_CONN_MAX_LIFETIME=30m

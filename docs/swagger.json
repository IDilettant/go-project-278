{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "URL shortener service API.\n",
        "title": "URL Shortener API",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/api/links": {
            "get": {
                "description": "Returns links using an optional range filter. If range is omitted, defaults to [0,10].",
                "produces": [
                    "application/json",
                    "application/problem+json"
                ],
                "tags": [
                    "links"
                ],
                "summary": "List links",
                "parameters": [
                    {
                        "type": "string",
                        "example": "[0,10]",
                        "description": "Range of items, format [start,end]",
                        "name": "range",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/handlers.LinkResponse"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    }
                }
            },
            "post": {
                "description": "Creates a short link. If short_name is empty, it will be autogenerated.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json",
                    "application/problem+json"
                ],
                "tags": [
                    "links"
                ],
                "summary": "Create link",
                "parameters": [
                    {
                        "description": "Create link request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.CreateLinkRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/handlers.LinkResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "409": {
                        "description": "Conflict",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    }
                }
            }
        },
        "/api/links/{id}": {
            "get": {
                "produces": [
                    "application/json",
                    "application/problem+json"
                ],
                "tags": [
                    "links"
                ],
                "summary": "Get link by ID",
                "parameters": [
                    {
                        "minimum": 1,
                        "type": "integer",
                        "description": "Link ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handlers.LinkResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    }
                }
            },
            "put": {
                "description": "Updates original_url. short_name is immutable; if provided and differs, returns 422.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json",
                    "application/problem+json"
                ],
                "tags": [
                    "links"
                ],
                "summary": "Update link",
                "parameters": [
                    {
                        "minimum": 1,
                        "type": "integer",
                        "description": "Link ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Update link request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.UpdateLinkRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handlers.LinkResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "409": {
                        "description": "Conflict",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    }
                }
            },
            "delete": {
                "produces": [
                    "application/problem+json"
                ],
                "tags": [
                    "links"
                ],
                "summary": "Delete link",
                "parameters": [
                    {
                        "minimum": 1,
                        "type": "integer",
                        "description": "Link ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    }
                }
            }
        },
        "/r/{short_name}": {
            "get": {
                "description": "Redirects to the original URL by short name.",
                "produces": [
                    "application/problem+json"
                ],
                "tags": [
                    "redirect"
                ],
                "summary": "Redirect by short name",
                "parameters": [
                    {
                        "maxLength": 32,
                        "minLength": 4,
                        "type": "string",
                        "description": "Short name",
                        "name": "short_name",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Found",
                        "schema": {
                            "type": "string"
                        },
                        "headers": {
                            "Location": {
                                "type": "string",
                                "description": "Redirect target"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/handlers.Problem"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handlers.CreateLinkRequest": {
            "type": "object",
            "properties": {
                "original_url": {
                    "type": "string",
                    "example": "https://example.com"
                },
                "short_name": {
                    "type": "string",
                    "example": "abc123"
                }
            }
        },
        "handlers.LinkResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "original_url": {
                    "type": "string",
                    "example": "https://example.com"
                },
                "short_name": {
                    "type": "string",
                    "example": "abc123"
                },
                "short_url": {
                    "type": "string",
                    "example": "https://example.com/r/abc123"
                }
            }
        },
        "handlers.Problem": {
            "type": "object",
            "properties": {
                "detail": {
                    "type": "string",
                    "example": "invalid short_name"
                },
                "status": {
                    "type": "integer",
                    "example": 400
                },
                "title": {
                    "type": "string",
                    "example": "Validation error"
                },
                "type": {
                    "type": "string",
                    "example": "validation_error"
                }
            }
        },
        "handlers.UpdateLinkRequest": {
            "type": "object",
            "properties": {
                "original_url": {
                    "type": "string",
                    "example": "https://example.com/updated"
                },
                "short_name": {
                    "type": "string",
                    "example": "abc123"
                }
            }
        }
    }
}